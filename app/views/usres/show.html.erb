<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <!-- モックのため、固定値や未実装になっている部分があります。アプリ完成前に修正しましょう。 -->
	    <table class='table'>
	      <tr>
	        <%= image_tag(@user.image.attached? ? @user.image : "default-image.jpg") %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
	      </tr>
	    </table>
	    <div class='row'>
	      <%= link_to "プロフィール編集", edit_user_path(current_user), class: "btn btn-primary" %>
	    </div>
        <h2 class="mt-3">New book</h2>
          <%= form_with model: @book, local: true do |f| %>
            <div class="field">
              <%= f.label :title, "Title" %><br>
              <%= f.text_field :title %>
            </div>
          
            <div class="field">
              <%= f.label :opinion, "Opinion" %><br>
              <%= f.text_area :opinion %>
            </div>
          
            <div class="actions">
              <%= f.submit "Create Book" %>
            </div>
          <% end %>
	    </div>
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <!-- 投稿した書籍一覧表示を作成しましょう。 -->
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.opinion %></td>
          </tr>
        <% end %>
        </tbody>
	    </table>
	  </div>
	</div>
</div>