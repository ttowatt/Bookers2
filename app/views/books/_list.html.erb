<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <!-- モックのため、固定値や未実装になっている部分があります。アプリ完成前に修正しましょう。 -->
	    <table class='table'>
	      <tr>
	        <%= image_tag(user.image.attached? ? user.image : "default-image.jpg") %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= user.introduction %></th>
	      </tr>
	    </table>
	    <div class='row'>
				<%= link_to edit_user_path(user), class: "btn btn-outline-secondary w-100 d-flex justify-content-center" do %>
					<i class="fas fa-user-edit me-2"></i>
				<% end %>
	    </div>
        <h2 class="mt-3">New book</h2>
          <%= form_with model: book, local: true do |f| %>
            <div class="field">
              <%= f.label :title, "Title" %><br>
              <%= f.text_field :title %>
            </div>
          
            <div class="field">
              <%= f.label :body, "Opinion" %><br>
              <%= f.text_area :body %>
            </div>
          
            <div class="actions">
              <%= f.submit "Create Book" %>
            </div>
          <% end %>
	    </div>