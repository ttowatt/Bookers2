<div class="container mt-4">
  <% if @book.errors.any? %>
  <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <%= render 'list', user: @user, book: @book %>
    </div>

    <div class="col-md-8">
      <h3>Books</h3>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="text-center">
                <% if book.user.image.attached? %>
                  <%= image_tag book.user.image.variant(resize_to_limit: [80, 80]), class: "d-block mx-auto" %>
                <% else %>
                  <%= image_tag "default-image.jpg", size: "80x80", class: "d-block mx-auto", style: "background:#ccc;" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
